extends ../layout

block content
  div.content-header
    div.container
      .content
        .card
          .card-body
            .row
              .col-sm-4
                .small-box.bg-info
                  .overlay.dark(id="refresh-total-samples")
                    i.fas.fa-3x.fa-sync-alt
                  .inner
                    h3(id="total-sample-text") 0
                    p Muestras totales
                  .icon
                    i.ion.ion-erlenmeyer-flask
              .col-sm-4
                .small-box.bg-warning
                  .overlay.dark(id="refresh-total-humans")
                    i.fas.fa-3x.fa-sync-alt
                  .inner
                    h3(id="total-humans-text") 0
                    p Peronas ingresadas
                  .icon
                    i.ion.ion-person-stalker
              .col-sm-4
                .small-box.bg-success
                  .overlay.dark(id="refresh-total-users")
                    i.fas.fa-3x.fa-sync-alt
                  .inner
                    h3(id="total-users-text") 0
                    p Usuarios registrados
                  .icon
                    i.ion.ion-person
        .card
          .card-body
            .row
              .col-lg-12.mt-4
                .row
                  if (currentUser.role === 'Admin' || currentUser.role === 'Operator')
                    .col-lg-3
                      a(href="/muestras/new" class="btn btn-default" style="width:100%;height:100%;") 
                        .p-4
                          i.fas.fa-user-plus
                          br
                          | Agregar persona
                    
                    .col-lg-3
                      a(href="/muestras/find" class="btn btn-default " style="width:100%;height:100%;") 
                        .p-4
                          i.fas.fa-vial
                          br
                          | Solicitar muestra
                  
                  if (currentUser.role === 'Admin' || currentUser.role === 'Lab')
                    .col-lg-3
                      a(href="/resultados/new" class="btn btn-default" style="width:100%;height:100%;") 
                        .p-4
                          i.fas.fa-dna
                          br
                          | Agregar resultados de muestras
                    
                  if (currentUser.role === 'Admin' || currentUser.role === 'Viewer' || currentUser.role === 'Operator')
                    .col-lg-3
                      a(href="/coincidencias/find" class="btn btn-default" style="width:100%;height:100%;") 
                        .p-4
                          i.fas.fa-search
                          br
                          | BÃºsqueda de coincidencias
