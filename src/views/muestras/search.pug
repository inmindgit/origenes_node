extends ../layout

block content
  div.content-header
    div.container
      div.row.mb-2
        div.col-sm-12
          h1= title

      .content
        .row
          .col-lg-12
            .card.py-2
              .card-body
                .row.justify-content-md-center
                  .col-md-6
                    form(action="/muestras/search", method="get", class="col-12")
                      .input-group.input-group-lg
                        input(type="text" name="documentId" class="form-control form-control-lg" placeholder="Ingrese el número de identificación")
                        span.input-group-append
                          button.btn.btn-default
                            i.fas.fa-search.fa-fw
        if numberCaseResult
          .row
            .col-lg-12
              .card.py-2
                .card-header
                  h3= numberCaseResult
