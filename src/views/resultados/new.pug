extends ../layout

block content
  div.content-header
    div.container
      div.row.mb-2
        div.col-sm-12
          h1= title
      
      .content
        .row
          .col-lg-12
            .card
              .card-body
                .row.justify-content-center
                  div
                    ul.nav.nav-pills.nav-fills(role="tablist")
                      li.nav-item.mx-2
                        a(class="btn btn-lg btn-default active" href="#custom-tabs-str" id="custom-tabs-form" data-toggle="pill" role="tab") STP
                      li.nav-item.mx-2
                        a(class="btn btn-lg btn-default" href="#custom-tabs-snp" id="custom-tabs-form" data-toggle="pill" role="tab") SNIP
        .row
          .col-lg-12
            .card
              .card-body
                .tab-content(id="custom-tabs-form-tabContent")
                  .tab-pane.fade(id="custom-tabs-snp" role="tabpanel")
                    .row
                      .col-12
                        include snip.pug
                  .tab-pane.fade.active.show(id="custom-tabs-str" role="tabpanel")
                    .row
                      .col-12
                        include str.pug
              .card-footer
                button(type="submit" class="btn btn-primary float-right") Enviar
                button(type="submit" class="btn btn-default") Cancelar
